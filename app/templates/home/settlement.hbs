<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>Settlement</h1>
  </section>

  <!-- Main content -->
  <section class="content">

    <div class="row">
      <div class="col-md-12">
        <div class="box">
          <div class="box-header">
            <h3 class="box-title"><!--Settlements--></h3>

            <div class="box-tools">
              
                  {{#link-to 'home.settlement'}}
                    Status
                  {{/link-to}}
                  <ul class="dropdown-menu">
                    <li role="presentation">{{#link-to 'home.settlement'}}Pending{{/link-to}}></li>
                    <li role="presentation">{{#link-to 'home.settlement'}}Completed{{/link-to}}</li>
                  </ul>
                
                
                  <div class="input-group input-group-sm" style="width: 250px;">
                    {{input type="text" name="table_search" class="form-control pull-right"
                    placeholder="Search by PO Id"}}

                    <div class="input-group-btn">
                      <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                    </div>
                  </div>
                
              

            </div>
          </div>
          <!-- /.box-header -->
          <div class="box-body no-padding">
            <table class="table">
              <tr>
                <th>PO Number</th>
                <th>PO Amount</th>
                <th>Stage</th>
                <th>InVoice Number</th>
                <th>Invoice Amount</th>
                <th>Pending payments</th>
                <th>Received payments</th>
              </tr>
              <tr>
                <td>{{item.anchOrPOID}}</td>
                <td>{{item.anchorpoamount}}</td>
                <td>{{item.moStatus}}</td>
                <td>{{item.moID}}</td>
                <td>{{item.moAmount}}</td>
                <td>{{pendingPayments}}</td>
                <td>{{receivedPayments}}</td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- /.content -->
</div>
